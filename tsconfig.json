{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "module": "commonjs",
    "target": "es2022",

    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",

    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}